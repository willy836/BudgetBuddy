<%= render partial: 'shared/nav', locals: { h1_content: "ADD TRANSACTION" } %>
<section class="add-transaction-section">
  <%= form_with model: @product, url: category_products_path(@category), local: true, scope: :product do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "Enter name of record", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, placeholder: "Enter amount", class: "form-control" %>
    </div>
    <div>
      <%= form.submit "Save" %>
    </div>
  <% end %>
</section>
